@{
    ViewBag.Title = "ManageSemesterRegistrations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item active">Manage Semester Registrations</li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Manage Semester Registrations</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Semester Registrations</h6>
        </div>
        <div class="card-body">
            <button type="button" class="btn btn-outline-success btn-sm mb-3" onclick="NavigateSemesterRegistrationForm('@Url.Action("AddOrEditSemesterRegistration", "SA")', 'Add')"><i class="fa fa-plus"></i> Add New</button>
            <input type="file" name="semRegistrationsExcel" id="semRegistrationsExcel" style="display: none;" onchange="onExcelUpload()" />
            <button type="button" class="btn btn-outline-success btn-sm mt-2 usrBtn float-right" onclick="uploadSemesterRegistration()"><i class="fa fa-upload"></i> Upload Semester Registrations</button>
            <a class="btn btn-outline-success btn-sm mr-2 mt-2 usrBtn float-right" href="javascript:DownloadSemesterRegistrationFormat('@Url.Action("DownloadSemesterRegistrationFormat", "SA")')"><i class="fa fa-download"></i> Download Sample Format</a>
            <button type="button" class="btn btn-outline-primary btn-sm mr-2 mt-2 float-right" onclick="ViewSRExample()"><i class="fa fa-eye"></i> View Instrcutions</button>
            <div class="table-responsive">
                <table id="semesterRegistrationTbl" class="table table-bordered data-table nowrap" style="width: 100%;"></table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="viewSRExampleModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Semester Registration Excel Upload Instructions</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-labelledby="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>Field</th>
                            <th>Description</th>
                            <th>Example</th>
                        </tr>
                        <tr>
                            <td>Calendar Year</td>
                            <td>Calendar Year as Integer Value</td>
                            <td>2022</td>
                        </tr>
                        <tr>
                            <td>Calendar Period</td>
                            <td>Calendar Period Name from 'Calendar Periods' Sheet</td>
                            <td>January - June</td>
                        </tr>
                        <tr>
                            <td>Intake Year</td>
                            <td>Intake Year from 'Intakes' Sheet</td>
                            <td>2022</td>
                        </tr>
                        <tr>
                            <td>Intake Name</td>
                            <td>Intake Name from 'Intakes' Sheet</td>
                            <td>Regular</td>
                        </tr>
                        <tr>
                            <td>Academic Year</td>
                            <td>Academic Year as Integer Value</td>
                            <td>1</td>
                        </tr>
                        <tr>
                            <td>Academic Semester</td>
                            <td>Academic Semester as Integer Value</td>
                            <td>1</td>
                        </tr>
                        <tr>
                            <td>Faculty</td>
                            <td>Faculty Code from 'Faculties' Sheet</td>
                            <td>IT</td>
                        </tr>
                        <tr>
                            <td>Institute</td>
                            <td>Institute Code from 'Institutes' Sheet</td>
                            <td>SLIIT</td>
                        </tr>
                        <tr>
                            <td>Degree</td>
                            <td>Degree Code from 'Degrees & Specializations' Sheet</td>
                            <td>IT</td>
                        </tr>
                        <tr>
                            <td>Specialization (Optional)</td>
                            <td>Specialization Code from 'Degrees & Specializations' Sheet</td>
                            <td>IS</td>
                        </tr>
                        <tr>
                            <td>From Date</td>
                            <td>Semester Starting Date</td>
                            <td>1/1/2022</td>
                        </tr>
                        <tr>
                            <td>To Date</td>
                            <td>Semester End Date</td>
                            <td>6/30/2022</td>
                        </tr>
                        <tr>
                            <td>Student Batches</td>
                            <td>Comma Separated Student Batch Names</td>
                            <td>Batch 1, Batch 2</td>
                        </tr>
                        <tr>
                            <td>Semester Subjects</td>
                            <td>Comma Separated Subject Codes (Offering for Semester) from 'Subjects' sheet</td>
                            <td>IT1110, IT1120</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var semesterRegistrationTbl;

        semesterRegistrationTbl = $("#semesterRegistrationTbl").DataTable({
            "responsive": true,
            "scrollY": "30vh",
            "scrollX": true,
            "scroller": true,
            "order": [],
            "ajax": {
                "url": "@Url.Action("GetSemesterRegistrations", "SA")",
                "type": "GET",
                "dataType": "json"
            },
            "columns": [
                {
                    "title": "",
                    "data": "SemesterId",
                    "render": function (data) {
                        return `<div class='dropdown dropright'>`
                            + `<a class='btn btn-sm' href='#' role='button' id='dropdownMenuLink' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>`
                            + `<i class='fa fa-ellipsis-v' aria-hidden='true'></i></a>`
                            + `<div class='dropdown-menu' aria-labelledby='dropdownMenuLink'>`
                            + `<a class='dropdown-item btn' onclick="NavigateSemesterRegistrationForm('@Url.Action("AddOrEditSemesterRegistration", "SA")/` + data + `', 'View')">View Semester Registration</a>`
                            + `<a class='dropdown-item btn' onclick="NavigateSemesterRegistrationForm('@Url.Action("AddOrEditSemesterRegistration", "SA")/` + data + `', 'Edit')">Edit Semester Registration</a>`
                            + `<a class='dropdown-item btn' onclick="NavigateStudentBatchForm('@Url.Action("ManageStudentBatches", "SA")/` + data + `')">Manage Student Batches</a>`
                            + `<a class='dropdown-item btn' onclick="NavigateSemesterSubjectForm('@Url.Action("ManageSemesterSubjects", "SA")/` + data + `')">Manage Semester Subjects</a>`
                            + `<a class='dropdown-item btn' onclick="NavigateSemesterSubjectLICsForm('@Url.Action("ManageSemesterSubjectLICs", "SA")/` + data + `')">Manage Semester Subject LICs</a>`
                            + `<a class='dropdown-item btn' onclick="NavigateSemesterTimetableForm('@Url.Action("ManageSemesterTimetable", "SA")/` + data + `')">Manage Semester Timetable</a></div></div>`;
                    },
                    "orderable": false,
                    "searchable": false,
                    "width": "20px"
                },
                {
                    "title": "Calendar Year",
                    "data": "CalendarYear",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Calendar Period",
                    "data": "CalendarPeriodName",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Intake Year",
                    "data": "IntakeYear",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Intake Name",
                    "data": "IntakeName",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Academic Year",
                    "data": "AcademicYear",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Academic Semester",
                    "data": "AcademicSemester",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Faculty",
                    "data": "FacultyName",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Awarding Institute",
                    "data": "InstituteName",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Degree",
                    "data": "DegreeName",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Specialization",
                    "data": "SpecializationName",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "From Date",
                    "data": "FromDate",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "To Date",
                    "data": "ToDate",
                    "render": function (data) {
                        if (data == null) {
                            return "N/A";
                        }
                        else {
                            return data;
                        }
                    }
                },
                {
                    "title": "Status",
                    "data": "IsActive",
                    "render": function (data) {
                        if (data == true) {
                            return 'Active';
                        }
                        else {
                            return 'Inactive';
                        }
                    }
                }
            ],
            "language": {
                "emptyTable": "No Semester Registrations Found!"
            }
        })

        function NavigateSemesterRegistrationForm(url, action) {
            if (action == "Add") {
                window.location.href = url;
            }
            else if (action == "Edit") {
                window.location.href = url + "/Edit";
            }
            else {
                window.location.href = url + "/View";
            }
        }

        function NavigateStudentBatchForm(url) {
            window.location.href = url;
        }

        function NavigateSemesterSubjectForm(url) {
            window.location.href = url;
        }

        function NavigateSemesterSubjectLICsForm(url) {
            window.location.href = url;
        }

        function NavigateSemesterTimetableForm(url) {
            window.location.href = url;
        }

        function DownloadSemesterRegistrationFormat(url) {
            window.location.href = url;
        }

        function uploadSemesterRegistration() {
            if (confirm("Are you sure you want to upload semester registration?\r\n \r\nOnce you upload, semester registration records will be updated in the 'Real Database'!")) {
                $("#semRegistrationsExcel").click();
            }
        }

        function onExcelUpload() {
            var uploadedFile = $("#semRegistrationsExcel")[0].files[0];
            var fd = new FormData();
            fd.append("UploadedFile", uploadedFile);

            $("#loader").show();

            $.ajax({
                type: "POST",
                url: "@Url.Action("UploadSemesterRegistration", "SA")",
                data: fd,
                processData: false,
                contentType: false,
                success: function (data) {
                    $("#loader").hide();
                    semesterRegistrationTbl.ajax.reload();

                    if (data.success != "null") {
                        if (data.success) {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                    else {
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "error"
                        });

                        window.location = "@Url.Action("DownloadSemesterRegistrationErrors", "SA")";
                    }
                }
            });
        }

        function ViewSRExample() {
            $("#viewSRExampleModal").modal("show");
        }
    </script>
}