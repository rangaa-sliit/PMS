@model PMS.Models.AccessGroup

@{
    ViewBag.Title = "AddOrEditAccessGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2" id="breadCrumbWrapper">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageAccessGroups", "SA")">Manage Access Groups</a></li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800" id="aeAccessGroupMainTitle"></h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" id="aeAccessGroupCardTitle"></h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddOrEditAccessGroup", "SA", FormMethod.Post, new { onsubmit = "return SubmitAccessGroupForm(this)", @id = "accessGroupForm", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.AccessGroupId)
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.AccessGroupName, "Access Group Name: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.AccessGroupName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Access Group Name", @id = "accessGroupName", oninput = "onAccessGroupNameInput()" } })
                        @Html.ValidationMessageFor(model => model.AccessGroupName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Description, "Description: ")
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Description", @id = "description", oninput = "onDescriptionInput()" } })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.IsActive, "Status: ")
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.IsActive, new List<SelectListItem>
                        {
                            new SelectListItem{ Text = "Active", Value = "true" },
                            new SelectListItem{ Text = "Inactive", Value = "false" }
                        }, new { @class = "form-control", @id = "accessGroupStatusList", onchange = "onAccessGroupStatusChange(this.value)" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" id="accessGroupSubmitBtn">Save</button>
                    <button class="btn btn-light" type="button" id="accessGroupClearBtn" onclick="clearAccessGroupForm()">Clear Changes</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        var operation;

        $(document).ready(function () {
            operation = window.location.pathname.toString().split('/')[4];

            if (operation != undefined) {
                $("#accessGroupSubmitBtn").prop("disabled", true);
                $("#accessGroupClearBtn").prop("disabled", true);
                if (operation == "Edit") {
                    $("#aeAccessGroupMainTitle").html("Edit Access Group");
                    $("#aeAccessGroupCardTitle").html("Edit Access Group");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Edit Access Group</li>`);
                }
                else {
                    $("#aeAccessGroupMainTitle").html("View Access Group");
                    $("#aeAccessGroupCardTitle").html("View Access Group");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">View Access Group</li>`);
                    $("#accessGroupName").prop("disabled", true);
                    $("#description").prop("disabled", true);
                    $("#accessGroupStatusList").prop("disabled", true);
                }
            }
            else {
                $("#aeAccessGroupMainTitle").html("Add Access Group");
                $("#aeAccessGroupCardTitle").html("Add Access Group");
                $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Add Access Group</li>`);
                $("#accessGroupStatusList").val("true");
            }
        })

        function SubmitAccessGroupForm(form) {
            $(form).removeData("validator");
            $(form).removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $("#loader").show();
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        $("#loader").hide();
                        if (data.success) {
                            if (operation == undefined) {
                                $("#accessGroupName").val("");
                                $("#description").val("");
                                $("#accessGroupStatusList").val("true");
                            }

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function clearAccessGroupForm() {
            if (operation == undefined) {
                $("#accessGroupName").val("");
                $("#description").val("");
                $("#accessGroupStatusList").val("true");
            }
            else {
                window.location.reload();
            }
        }

        function onAccessGroupNameInput() {
            $("#accessGroupSubmitBtn").prop("disabled", false);
            $("#accessGroupClearBtn").prop("disabled", false);
        }

        function onDescriptionInput() {
            $("#accessGroupSubmitBtn").prop("disabled", false);
            $("#accessGroupClearBtn").prop("disabled", false);
        }

        function onAccessGroupStatusChange(newStatus) {
            $("#accessGroupSubmitBtn").prop("disabled", false);
            $("#accessGroupClearBtn").prop("disabled", false);
        }
    </script>
}