@model PMS.Models.Subject

@{
    ViewBag.Title = "AddOrEditSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2" id="breadCrumbWrapper">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageSubject", "SA")">Manage Subjects</a></li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800" id="aeSubjectMainTitle"></h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" id="aeSubjectCardTitle"></h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddOrEditSubject", "SA", FormMethod.Post, new { onsubmit = "return SubmitSubjectForm(this)", @id = "subjectForm", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.SubjectId)
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.SubjectCode, "Subject Code: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.SubjectCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Subject Code", @id = "subjectCode", oninput = "onSubjectCodeInput()" } })
                        @Html.ValidationMessageFor(model => model.SubjectCode)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.SubjectName, "Subject Name: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Subject Name", @id = "subjectName", oninput = "onSubjectNameInput()" } })
                        @Html.ValidationMessageFor(model => model.SubjectName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.IsActive, "Status: ")
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.IsActive, new List<SelectListItem>
                        {
                            new SelectListItem{ Text = "Active", Value = "true" },
                            new SelectListItem{ Text = "Inactive", Value = "false" }
                        }, new { @class = "form-control", @id = "subjectStatusList", onchange = "onSubjectStatusChange(this.value)" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" id="subjectSubmitBtn">Save</button>
                    <button class="btn btn-light" type="button" id="subjectClearBtn" onclick="clearSubjectForm()">Clear Changes</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        var operation;
        //var oldSubjectCode, oldSubjectName, oldSubjectStatus, resourceGroupFormOpenAction, resourceGroupDataTable;
        //var isResourceGroupFormStatusChanged = false;
        //var resorceGroupData = null;
        //var resGroupForm = null;
        //var resourceGroupStatus = null;

        $(document).ready(function () {
            operation = window.location.pathname.toString().split('/')[4];

            if (operation != undefined) {
                $("#subjectSubmitBtn").prop("disabled", true);
                $("#subjectClearBtn").prop("disabled", true);
                if (operation == "Edit") {
                    $("#aeSubjectMainTitle").html("Edit Subject");
                    $("#aeSubjectCardTitle").html("Edit Subject");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Edit Subject</li>`);
                    //oldSubjectCode = $("#subjectCode").val();
                    //oldSubjectName = $("#subjectName").val();
                    //oldSubjectStatus = $("subjectStatusList :selected").val();
                }
                else {
                    $("#aeSubjectMainTitle").html("View Subject");
                    $("#aeSubjectCardTitle").html("View Subject");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">View Subject</li>`);
                    $("#subjectCode").prop("disabled", true);
                    $("#subjectName").prop("disabled", true);
                    $("#subjectStatusList").prop("disabled", true);
                }
            }
            else {
                $("#aeSubjectMainTitle").html("Add Subject");
                $("#aeSubjectCardTitle").html("Add Subject");
                $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Add Subject</li>`);
                $("#subjectStatusList").val("true");
            }
        })

        function SubmitSubjectForm(form) {
            $(form).removeData("validator");
            $(form).removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $("#loader").show();
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        $("#loader").hide();
                        if (data.success) {
                            if (operation == undefined) {
                                $("#subjectCode").val("");
                                $("#subjectName").val("");
                                $("#subjectStatusList").val("true");
                            }

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function clearSubjectForm() {
            if (operation == undefined) {
                $("#subjectCode").val("");
                $("#subjectName").val("");
                $("#subjectStatusList").val("true");
            }
            else {
                window.location.reload();
            }
        }

        function onSubjectCodeInput() {
            $("#subjectSubmitBtn").prop("disabled", false);
            $("#subjectClearBtn").prop("disabled", false);
        }

        function onSubjectNameInput() {
            $("#subjectSubmitBtn").prop("disabled", false);
            $("#subjectClearBtn").prop("disabled", false);
        }

        function onSubjectStatusChange(newStatus) {
            $("#subjectSubmitBtn").prop("disabled", false);
            $("#subjectClearBtn").prop("disabled", false);
        }
    </script>
}

