        position: relative;
    }

    #line-chart {
        width: 500px;
        height: 300px;
        position: relative;
    }

        #bar-chart::before, #line-chart::before {
            content: "";
            position: absolute;
            display: block;
            width: 240px;
            height: 30px;
            left: 155px;
            top: 254px;
            background: #FAFAFA;
            box-shadow: 1px 1px 0 0 #DDD;
        }

    #pie-chart {
        width: 450px;
        height: 250px;
        position: relative;
    }

        #pie-chart::before {
            content: "";
            position: absolute;
            display: block;
            width: 180px;
            height: 145px;
            left: 280px;
            top: 0;
            background: #FAFAFA;
            box-shadow: 1px 1px 0 0 #DDD;
        }

        #pie-chart::after {
            content: "";
            position: absolute;
            display: block;
            top: 260px;
            left: 70px;
            width: 170px;
            height: 2px;
            background: rgba(0,0,0,0.1);
