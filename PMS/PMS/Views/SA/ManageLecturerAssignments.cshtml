@{
    ViewBag.Title = "ManageLecturerAssignments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item active">Manage Lecturer Assignments</li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Manage Lecturer Assignments</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lecturer Assignments</h6>
        </div>
        <div class="card-body">
            <button type="button" class="btn btn-outline-success btn-sm mb-3" onclick="PopupLecturerAssignmentForm('@Url.Action("AddOrEditLecturerAssignment", "SA")', 'Add')"><i class="fa fa-plus"></i> Add New</button>
            <div class="table-responsive">
                <table id="lecturerAssignmentsTbl" class="table table-bordered data-table nowrap" style="width: 100%;"></table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="lecturerAssignmentModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="lecturerAssignmentModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="lecturerAssignmentModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="lecturerAssignmentFormContent">

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var lecturerAssignmentsTbl, lecturerAssignmentFormOpenAction, oldRoleName, oldRoleStatus;
        var semesterId = window.location.pathname.toString().split('/')[3];

        lecturerAssignmentsTbl = $("#lecturerAssignmentsTbl").DataTable({
            "responsive": true,
            "scrollY": "30vh",
            "scrollX": true,
            "scroller": true,
            "order": [],
            "ajax": {
                "url": "@Url.Action("GetLecturerAssignments", "SA")/" + semesterId,
                "type": "GET",
                "dataType": "json"
            },
            "columns": [
                {
                    "title": "",
                    "data": "Id",
                    "render": function (data) {
                        return `<div class='dropdown dropright'>`
                                + `<a class='btn btn-sm' href='#' role='button' id='dropdownMenuLink' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>`
                                + `<i class='fa fa-ellipsis-v' aria-hidden='true'></i></a>`
                                + `<div class='dropdown-menu' aria-labelledby='dropdownMenuLink'>`
                                + `<a class='dropdown-item btn' onclick="PopupLecturerAssignmentForm('@Url.Action("AddOrEditLecturerAssignment", "SA")/` + data + `', 'View')">View Campus</a>`
                                + `<a class='dropdown-item btn' onclick="PopupLecturerAssignmentForm('@Url.Action("AddOrEditLecturerAssignment", "SA")/` + data + `', 'Edit')">Edit Campus</a></div></div>`
                    },
                    "orderable": false,
                    "searchable": false,
                    "width": "20px"
                },
                {
                    "title": "Lecturer / Instructor",
                    "data": "LecturerName"
                },
                {
                    "title": "Subject Name",
                    "data": "SubjectName"
                },
                {
                    "title": "Student Batches",
                    "data": "StudentBatches",
                    "render": function (data) {
                        return JSON.parse(data);
                    }
                },
                {
                    "title": "Status",
                    "data": "IsActive",
                    "render": function (data) {
                        if (data == true) {
                            return 'Active';
                        }
                        else {
                            return 'Inactive';
                        }
                    }
                }
            ],
            "language": {
                "emptyTable": "No Records Found!"
            }
        })

        function PopupLecturerAssignmentForm(url, action) {
            $.get(url + "/" + semesterId)
                .done(function (response) {
                    $("#lecturerAssignmentFormContent").html(response);
                    $("#lecturerAssignmentModal").modal("show");

                    if (action == "Add") {
                        lecturerAssignmentFormOpenAction = "Add";
                        $("#lecturerAssignmentModalLabel").html("Add Lecturer Assignment");
                        $("#Id").val("");
                        $("#AccessGroupId").val(accessGroupId);
                        $("#roleStatusList").val("true");
                    }
                    else {
                        $("#lecturerAssignmentSubmitBtn").prop("disabled", true);
                        $("#lecturerAssignmentClearBtn").prop("disabled", true);
                        if (action == "Edit") {
                            lecturerAssignmentFormOpenAction = "Edit";
                            $("#lecturerAssignmentModalLabel").html("Edit Lecturer Assignment");
                            oldRoleName = $("#roleName").val();
                            oldRoleStatus = $("#roleStatusList :selected").val();
                        }
                        else {
                            lecturerAssignmentFormOpenAction = "View";
                            $("#lecturerAssignmentModalLabel").html("View Lecturer Assignment");
                            $("#roleName").prop("disabled", true);
                            $("#roleStatusList").prop("disabled", true);
                        }
                    }
                });
        }

        function SubmitLecturerAssignmentForm(form) {
            $(form).removeData("validator");
            $(form).removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $("#loader").show();
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        $("#loader").hide();
                        if (data.success) {
                            $("#accessGroupRolesModal").modal("hide");
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            });

                            accessGroupRolesTbl.ajax.reload();
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            });
                        }
                    }
                });
            }
            return false;
        }

        function clearLecturerAssignmentForm() {
            if (accessGroupRolesFormOpenAction == "Add") {
                $("#roleName").val("");
                $("#roleStatusList").val("true");
            }
            else if (accessGroupRolesFormOpenAction == "Edit") {
                $("#roleName").val(oldRoleName);
                $("#roleStatusList").val(oldRoleStatus);
            }
        }

        function onRoleNameInput() {
            $("#accessGroupRoleSubmitBtn").prop("disabled", false);
            $("#accessGroupRoleClearBtn").prop("disabled", false);
        }

        function onRoleStatusChange(newStatus) {
            $("#accessGroupRoleSubmitBtn").prop("disabled", false);
            $("#accessGroupRoleClearBtn").prop("disabled", false);
        }
    </script>
}