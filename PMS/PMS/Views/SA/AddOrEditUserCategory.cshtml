@model PMS.Models.UserCategory

@{
    ViewBag.Title = "AddOrEditUserCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2" id="breadCrumbWrapper">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageUserCategories", "SA")">Manage User Categories</a></li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800" id="aeUserCategoryMainTitle"></h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" id="aeUserCategoryCardTitle"></h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddOrEditUserCategory", "SA", FormMethod.Post, new { onsubmit = "return SubmitUserCategoryForm(this)", @id = "userCategoryForm", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.CategoryName, "User Category Name: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @placeholder = "User Category Name", @id = "categoryName", oninput = "onCategoryNameInput()" } })
                        @Html.ValidationMessageFor(model => model.CategoryName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.Description, "Description: ")
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Description", @id = "userCategoryDescription", oninput = "onUserCategoryDescriptionInput()" } })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.IsActive, "Status: ")
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.IsActive, new List<SelectListItem>
                        {
                            new SelectListItem{ Text = "Active", Value = "true" },
                            new SelectListItem{ Text = "Inactive", Value = "false" }
                        }, new { @class = "form-control", @id = "userCategoryStatusList", onchange = "onUserCategoryStatusChange(this.value)" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" id="userCategorySubmitBtn">Save</button>
                    <button class="btn btn-light" type="button" id="userCategoryClearBtn" onclick="clearUserCategoryForm()">Clear Changes</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        var operation;

        $(document).ready(function () {
            operation = window.location.pathname.toString().split('/')[4];

            if (operation != undefined) {
                $("#userCategorySubmitBtn").prop("disabled", true);
                $("#userCategoryClearBtn").prop("disabled", true);
                if (operation == "Edit") {
                    $("#aeUserCategoryMainTitle").html("Edit User Category");
                    $("#aeUserCategoryCardTitle").html("Edit User Category");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Edit User Category</li>`);
                }
                else {
                    $("#aeUserCategoryMainTitle").html("View User Category");
                    $("#aeUserCategoryCardTitle").html("View User Category");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">View User Category</li>`);
                    $("#categoryName").prop("disabled", true);
                    $("#userCategoryDescription").prop("disabled", true);
                    $("#userCategoryStatusList").prop("disabled", true);
                }
            }
            else {
                $("#aeUserCategoryMainTitle").html("Add User Category");
                $("#aeUserCategoryCardTitle").html("Add User Category");
                $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Add User Category</li>`);
                $("#userCategoryStatusList").val("true");
            }
        })

        function SubmitUserCategoryForm(form) {
            $(form).removeData("validator");
            $(form).removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $("#loader").show();
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        $("#loader").hide();
                        if (data.success) {
                            if (operation == undefined) {
                                $("#categoryName").val("");
                                $("#userCategoryDescription").val("");
                                $("#userCategoryStatusList").val("true");
                            }

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function clearUserCategoryForm() {
            if (operation == undefined) {
                $("#categoryName").val("");
                $("#userCategoryDescription").val("");
                $("#userCategoryStatusList").val("true");
            }
            else {
                window.location.reload();
            }
        }

        function onCategoryNameInput() {
            $("#userCategorySubmitBtn").prop("disabled", false);
            $("#userCategoryClearBtn").prop("disabled", false);
        }

        function onUserCategoryDescriptionInput() {
            $("#userCategorySubmitBtn").prop("disabled", false);
            $("#userCategoryClearBtn").prop("disabled", false);
        }

        function onUserCategoryStatusChange(newStatus) {
            $("#userCategorySubmitBtn").prop("disabled", false);
            $("#userCategoryClearBtn").prop("disabled", false);
        }
    </script>
}