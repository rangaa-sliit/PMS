@{
    ViewBag.Title = "ManageSemesterSubjectLICs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageSemesterRegistrations", "SA")">Manage Semester Registrations</a></li>
            <li class="breadcrumb-item active">Manage Semester Subject LICs</li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Manage Semester Subject LICs</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Semester Subject LICs</h6>
        </div>
        <div class="card-body">
            <button type="button" class="btn btn-outline-success btn-sm mb-3" onclick="NavigateAddSSLICForm()"><i class="fa fa-plus"></i> Add New</button>
            <div class="table-responsive">
                <table id="ssLICTbl" class="table table-bordered data-table nowrap" style="width: 100%;"></table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var ssLICTbl;
        var semesterRegistrationId = window.location.pathname.toString().split('/')[3];

        ssLICTbl = $("#ssLICTbl").DataTable({
            "responsive": true,
            "scrollY": "30vh",
            "scrollX": true,
            "scroller": true,
            "order": [],
            "ajax": {
                "url": "@Url.Action("GetSemesterSubjectLICs", "SA")/" + semesterRegistrationId,
                "type": "GET",
                "dataType": "json"
            },
            "columns": [
                {
                    "title": "",
                    "data": "SSLICId",
                    "render": function (data) {
                        return `<div class='dropdown dropright'>`
                            + `<a class='btn btn-sm' href='#' role='button' id='dropdownMenuLink' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>`
                            + `<i class='fa fa-ellipsis-v' aria-hidden='true'></i></a>`
                            + `<div class='dropdown-menu' aria-labelledby='dropdownMenuLink'>`
                            + `<a class='dropdown-item btn' onclick="NavigateSSLICForm(` + data + `, 'View')">View LIC</a>`
                            + `<a class='dropdown-item btn' onclick="NavigateSSLICForm(` + data + `, 'Edit')">Edit LIC</a></div></div>`;
                    },
                    "orderable": false,
                    "searchable": false,
                    "width": "20px"
                },
                {
                    "title": "Semester Subject",
                    "data": "SemesterSubjectName"
                },
                {
                    "title": "LIC Name",
                    "data": "LICName"
                },
                {
                    "title": "Status",
                    "data": "IsActive",
                    "render": function (data) {
                        if (data == true) {
                            return 'Active';
                        }
                        else {
                            return 'Inactive';
                        }
                    }
                }
            ],
            "language": {
                "emptyTable": "No LIC Records Found!"
            }
        })

        function NavigateAddSSLICForm() {
            window.location.href = "@Url.Action("AddOrEditSemesterSubjectLIC", "SA")/" + semesterRegistrationId;
        }

        function NavigateSSLICForm(ssLICId, action) {
            var url = "@Url.Action("AddOrEditSemesterSubjectLIC", "SA")/" + semesterRegistrationId;

            if (action == "Edit") {
                window.location.href = url + "/" + ssLICId + "/Edit" ;
            }
            else {
                window.location.href = url + "/" + ssLICId + "/View";
            }
        }
    </script>
}