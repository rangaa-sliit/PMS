@model PMS.Models.Specialization

@{
    ViewBag.Title = "AddOrEditSpecialization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2" id="breadCrumbWrapper">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageSpecialization", "SA")">Manage Specialization</a></li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800" id="aeSpecializationMainTitle"></h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" id="aeSpecializationCardTitle"></h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddOrEditSpecialization", "SA", FormMethod.Post, new { onsubmit = "return SubmitSpecializationForm(this)", @id = "specializationForm", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.SpecializationId)
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.Code, "Specialization Code: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @placeholder = "Specialization Code", @id = "Code", oninput = "onSpecializationCodeInput()" } })
                        @Html.ValidationMessageFor(model => model.Code)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.Name, "Specialization Name: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Specialization Name", @id = "Name", oninput = "onSpecializationNameInput()" } })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.DegreeId, "Degree: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.DegreeId, (IEnumerable<SelectListItem>)ViewBag.degreeList, new { @class = "form-control", @id = "DegreeId", onchange = "onDegreeChange(this.value)" })
                        @Html.ValidationMessageFor(model => model.DegreeId)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.InstituteId, "Institute: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.InstituteId, (IEnumerable<SelectListItem>)ViewBag.instituteList, new { @class = "form-control", @id = "InstituteId", onchange = "onInstituteChange(this.value)" })
                        @Html.ValidationMessageFor(model => model.InstituteId)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.DepartmentId, "Department: ")
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.departmentList, new { @class = "form-control", @id = "DepartmentId", onchange = "onDepartmentChange(this.value)" })
                        @Html.ValidationMessageFor(model => model.DepartmentId)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.IsActive, "Status: ")
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.IsActive, new List<SelectListItem>
                        {
                            new SelectListItem{ Text = "Active", Value = "true" },
                            new SelectListItem{ Text = "Inactive", Value = "false" }
                        }, new { @class = "form-control", @id = "specializationStatusList", onchange = "onSpecializationStatusChange(this.value)" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" id="specializationSubmitBtn">Save</button>
                    <button class="btn btn-light" type="button" id="specializationClearBtn" onclick="clearSpecializationForm()">Clear Changes</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        var operation;

        $(document).ready(function () {
            operation = window.location.pathname.toString().split('/')[4];

            if (operation != undefined) {
                $("#specializationSubmitBtn").prop("disabled", true);
                $("#specializationClearBtn").prop("disabled", true);
                if (operation == "Edit") {
                    $("#aeSpecializationMainTitle").html("Edit Specialization");
                    $("#aeSpecializationCardTitle").html("Edit Specialization");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Edit Specialization</li>`);
                    //oldCode = $("#Code").val();
                    //oldName = $("#Name").val();
                    //oldDegree = $("#Degree").val();
                    //oldInstitute = $("#Institute").val();
                    //oldDepartment = $("#Department").val();
                    //oldSpecializationStatus = $("specializationStatusList :selected").val();
                }
                else {
                    $("#aeSpecializationtMainTitle").html("View Specialization");
                    $("#aeSpecializationCardTitle").html("View Specialization");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">View Specialization</li>`);
                    $("#Code").prop("disabled", true);
                    $("#Name").prop("disabled", true);
                    $("#DegreeId").prop("disabled", true);
                    $("#InstituteId").prop("disabled", true);
                    $("#DepartmentId").prop("disabled", true);
                    $("#specializationStatusList").prop("disabled", true);
                }
            }
            else {
                $("#aeSpecializationMainTitle").html("Add Specialization");
                $("#aeSpecializationtCardTitle").html("Add Specialization");
                $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Add Specialization</li>`);
                $("#DegreeId").val("");
                $("#InstituteId").val("");
                $("#DepartmentId").val("");
                $("#specializationStatusList").val("true");
            }
        })

        function SubmitSpecializationForm(form) {
            $(form).removeData("validator");
            $(form).removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $("#loader").show();
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        $("#loader").hide();
                        if (data.success) {
                            if (operation == undefined) {
                                $("#Code").val("");
                                $("#Name").val("");
                                $("#DegreeId").val("");
                                $("#InstituteId").val("");
                                $("#DepartmentId").val("");
                                $("#specializationStatusList").val("true");
                            }

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function clearSpecializationForm() {
            if (operation == undefined) {
                $("#Code").val("");
                $("#Name").val("");
                $("#DegreeId").val("");
                $("#InstituteId").val("");
                $("#DepartmentId").val("");
                $("#specializationStatusList").val("true");
            }
            else {
                window.location.reload();
            }
        }

        function onSpecializationCodeInput() {
            $("#specializationSubmitBtn").prop("disabled", false);
            $("#specializationClearBtn").prop("disabled", false);
        }

        function onSpecializationNameInput() {
            $("#specializationSubmitBtn").prop("disabled", false);
            $("#specializationClearBtn").prop("disabled", false);
        }

        function onDegreeChange(newDegree) {
            $("#specializationSubmitBtn").prop("disabled", false);
            $("#specializationClearBtn").prop("disabled", false);
        }

        function onInstituteChange(newInstitute) {
            $("#specializationSubmitBtn").prop("disabled", false);
            $("#specializationClearBtn").prop("disabled", false);
        }

        function onDepartmentChange(newDepartment) {
            $("#specializationSubmitBtn").prop("disabled", false);
            $("#specializationClearBtn").prop("disabled", false);
        }

        function onSpecializationStatusChange(newStatus) {
            $("#specializationSubmitBtn").prop("disabled", false);
            $("#specializationClearBtn").prop("disabled", false);
        }
    </script>
}


