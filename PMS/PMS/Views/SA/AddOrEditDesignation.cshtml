@model PMS.Models.Designation

@{
    ViewBag.Title = "AddOrEditDesignation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2" id="breadCrumbWrapper">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageDesignations", "SA")">Manage Designations</a></li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800" id="aeDesignationMainTitle"></h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" id="aeDesignationCardTitle"></h6>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddOrEditDesignation", "SA", FormMethod.Post, new { onsubmit = "return SubmitDesignationForm(this)", @id = "designationForm", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.DesignationId)
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.DesignationName, "Designation Name: ", new { @class = "required" })
                    </div>
                    <div class="col-sm-9">
                        @Html.EditorFor(model => model.DesignationName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Designation Name", @id = "designationName", oninput = "onDesignationNameInput()" } })
                        @Html.ValidationMessageFor(model => model.DesignationName)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2">
                        @Html.LabelFor(model => model.IsActive, "Status: ")
                    </div>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.IsActive, new List<SelectListItem>
                        {
                            new SelectListItem{ Text = "Active", Value = "true" },
                            new SelectListItem{ Text = "Inactive", Value = "false" }
                        }, new { @class = "form-control", @id = "designationStatusList", onchange = "onDesignationStatusChange(this.value)" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" id="designationSubmitBtn">Save</button>
                    <button class="btn btn-light" type="button" id="designationClearBtn" onclick="clearDesignationForm()">Clear Changes</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        var operation;

        $(document).ready(function () {
            operation = window.location.pathname.toString().split('/')[4];

            if (operation != undefined) {
                $("#designationSubmitBtn").prop("disabled", true);
                $("#designationClearBtn").prop("disabled", true);
                if (operation == "Edit") {
                    $("#aeDesignationMainTitle").html("Edit Designation");
                    $("#aeDesignationCardTitle").html("Edit Designation");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Edit Designation</li>`);
                }
                else {
                    $("#aeDesignationMainTitle").html("View Designation");
                    $("#aeDesignationCardTitle").html("View Designation");
                    $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">View Designation</li>`);
                    $("#designationName").prop("disabled", true);
                    $("#designationStatusList").prop("disabled", true);
                }
            }
            else {
                $("#aeDesignationMainTitle").html("Add Designation");
                $("#aeDesignationCardTitle").html("Add Designation");
                $("#breadCrumbWrapper").append(`<li class="breadcrumb-item active">Add Designation</li>`);
                $("#designationStatusList").val("true");
            }
        })

        function SubmitDesignationForm(form) {
            $(form).removeData("validator");
            $(form).removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $("#loader").show();
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        $("#loader").hide();
                        if (data.success) {
                            if (operation == undefined) {
                                $("#designationName").val("");
                                $("#designationStatusList").val("true");
                            }

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
            }
            return false;
        }

        function clearDesignationForm() {
            if (operation == undefined) {
                $("#designationName").val("");
                $("#designationStatusList").val("true");
            }
            else {
                window.location.reload();
            }
        }

        function onDesignationNameInput() {
            $("#designationSubmitBtn").prop("disabled", false);
            $("#designationClearBtn").prop("disabled", false);
        }

        function onDesignationStatusChange(newStatus) {
            $("#designationSubmitBtn").prop("disabled", false);
            $("#designationClearBtn").prop("disabled", false);
        }
    </script>
}