@{
    ViewBag.Title = "ManageLectureSessions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item active">Manage Lecture Sessions</li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Manage Lecture Sessions</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lecture Sessions</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="lectureSessionsTbl" class="table table-bordered data-table nowrap" style="width: 100%;"></table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var lectureSessionsTbl;

        lectureSessionsTbl = $("#lectureSessionsTbl").DataTable({
            "responsive": true,
            "scrollY": "30vh",
            "scrollX": true,
            "scroller": true,
            "order": [],
            "ajax": {
                "url": "@Url.Action("GetLectureSessions", "SA")",
                "type": "GET",
                "dataType": "json"
            },
            "columns": [
                {
                    "title": "",
                    "data": null,
                    "render": function (data) {
                        var dynamicContent = ``;
                        if (data.IsLectureRecordAdded == false) {
                            dynamicContent = dynamicContent + `<div class='dropdown dropright'>`
                                + `<a class='btn btn-sm' href='#' role='button' id='dropdownMenuLink' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>`
                                + `<i class='fa fa-ellipsis-v' aria-hidden='true'></i></a>`
                                + `<div class='dropdown-menu' aria-labelledby='dropdownMenuLink'>`
                                + `<a class='dropdown-item btn' onclick="NavigateConductedLectureForm(` + data.TimetableId + `)">Add Lecture Record</a></div></div>`;
                        }

                        return dynamicContent;
                    },
                    "orderable": false,
                    "searchable": false,
                    "width": "20px"
                },
                {
                    "title": "Subject",
                    "data": "SubjectName"
                },
                {
                    "title": "Lecture Date",
                    "data": "LectureDate"
                },
                {
                    "title": "Lecture Start Time",
                    "data": "FromTime"
                },
                {
                    "title": "Lecture End Time",
                    "data": "ToTime"
                },
                {
                    "title": "Location",
                    "data": "Location"
                },
                {
                    "title": "Lecture Type",
                    "data": "LectureTypeName"
                },
                {
                    "title": "Student Batches",
                    "data": "StudentBatches"
                },
                {
                    "title": "Status",
                    "data": "IsActive",
                    "render": function (data) {
                        if (data == true) {
                            return 'Active';
                        }
                        else {
                            return 'Inactive';
                        }
                    }
                }
            ],
            "language": {
                "emptyTable": "No Records Found!"
            }
        });

        function NavigateConductedLectureForm(timetableId) {
            window.location.href = "@Url.Action("AddOrEditConductedLecture", "SA")/" + timetableId;
        }
    </script>
}