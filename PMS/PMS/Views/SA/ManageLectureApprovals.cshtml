                        //    + `<i class='fa fa-ellipsis-v' aria-hidden='true'></i></a>`
                        //    + `<div class='dropdown-menu' aria-labelledby='dropdownMenuLink'>`
                        //    + `<a class='dropdown-item btn' onclick="NavigateConductedLecturesForm(` + data.TimetableId + `,` + data.CLId + `, 'View')">View LIC</a>`;

                        //if (data.CurrentStage == 1) {
                        //    dynamicContent += `<a class='dropdown-item btn' onclick="NavigateConductedLecturesForm(` + data.TimetableId + `,` + data.CLId + `, 'Edit')">Edit LIC</a></div></div>`;
                        //}
                        //else {
                        //    dynamicContent += `</div></div>`;
                        //}

                        return "";
                    },
                    "orderable": false,
                    "searchable": false,
                    "width": "20px"
                },
                {
                    "title": "Lecturer / Instructor Name",
                    "data": "LecturerName",
                },
                {
                    "title": "Lecture Record Month",
                    "data": "RecordMonth"
                }
            ],
            "language": {
                "emptyTable": "No Records Found!"
            }
        });

        function NavigateConductedLecturesForm(timetableId, clId, action) {
            var url = "@Url.Action("AddOrEditConductedLecture", "SA")/" + timetableId + "/" + clId;

            if (action == "Edit") {
                window.location.href = url + "/Edit" ;
            }
            else {
                window.location.href = url + "/View";
            }
        }

        function OpenStudentAttendanceSheet(data) {
            window.open(data);
        }

        function onSendToApprovalClick() {
            $("#sendToApprovalModal").modal("show");
        }

        function SendToApprovalConfirm() {
            $("#loader").show();
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ConductedLectureSendToApproval", "SA")',
                    success: function (data) {
                        $("#loader").hide();
                        if (data.success) {
                            $("#sendToApprovalModal").modal("hide");
                            conductedLecturesTbl.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
        }

    </script>
}