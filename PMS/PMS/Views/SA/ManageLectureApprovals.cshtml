@{
    ViewBag.Title = "ManageLectureApprovals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item active">Manage Lecture Approvals</li>
        </ol>
    </div>
</div>
<hr class="ml-2 mr-2 mt-0 mb-2" />
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Manage Lecture Approvals</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lecture Approvals</h6>
        </div>
        <div class="card-body">
            <button type="button" class="btn btn-sm btn-outline-primary float-right mb-3" onclick="OpenColorCodingDescription()"><i class="fa fa-eye"></i> Color Coding Desctription</button>
            <div class="table-responsive">
                <table id="lectureApprovalTbl" class="table table-bordered data-table nowrap" style="width: 100%;"></table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="sendToApprovalModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Send To Approval Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-labelledby="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to your lecture records to approval?</p>
                    <p class="text-danger">This action cannot be undone once you click on 'Yes, Send'!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" onclick="SendToApprovalConfirm()">Yes, Send</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="colorCodingDescriptionModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Color Coding Descriptions</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-labelledby="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>Color Code</th>
                            <th>Description</th>
                        </tr>
                        <tr>
                            <td><div class="icon-circle pendingRow"></div></td>
                            <td>Approval Pending Lecture Records Remaining</td>
                        </tr>
                        <tr>
                            <td><div class="icon-circle approvedRow"></div></td>
                            <td>All Lecture Records Approved</td>
                        </tr>
                        <tr>
                            <td><div class="icon-circle rejectedRow"></div></td>
                            <td>All Lecture Records Rejected</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var lectureApprovalTbl;

        lectureApprovalTbl = $("#lectureApprovalTbl").DataTable({
            "responsive": true,
            "scrollY": "30vh",
            "scrollX": true,
            "scroller": true,
            "order": [],
            "ajax": {
                "url": "@Url.Action("GetConductedLecturesForApproval", "SA")",
                "type": "GET",
                "dataType": "json"
            },
            "createdRow": function (row, data, dataIndex) {
                if (data.PendingRecordsCount != 0) {
                    $(row).addClass("pendingRow");
                    $(row).addClass("text-dark");
                }
                else if (data.PendingRecordsCount == 0 && data.RejectedRecordsCount == 0) {
                    $(row).addClass("approvedRow");
                    $(row).addClass("text-dark");
                }
                else if (data.PendingRecordsCount == 0 && data.ApprovedRecordsCount == 0) {
                    $(row).addClass("rejectedRow");
                    $(row).addClass("text-dark");
                }
            },
            "columns": [
                {
                    "title": "",
                    "data": null,
                    "render": function (data) {
                        var dynamicContent = `<div class='dropdown dropright'>`
                            + `<a class='btn btn-sm' href='#' role='button' id='dropdownMenuLink' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>`
                            + `<i class='fa fa-ellipsis-v' aria-hidden='true'></i></a>`
                            + `<div class='dropdown-menu' aria-labelledby='dropdownMenuLink'>`
                            + `<a class='dropdown-item btn' onclick="NavigateConductedLecturesApprovalForm('` + data.LecturerId + `', '` + data.RecordMonth + `')">Manage Approval</a></div></div>`;

                        //if (data.CurrentStage == 1) {
                        //    dynamicContent += `<a class='dropdown-item btn' onclick="NavigateConductedLecturesForm(` + data.TimetableId + `,` + data.CLId + `, 'Edit')">Edit LIC</a></div></div>`;
                        //}
                        //else {
                        //    dynamicContent += `</div></div>`;
                        //}

                        return dynamicContent;
                    },
                    "orderable": false,
                    "searchable": false,
                    "width": "20px"
                },
                {
                    "title": "Lecturer / Instructor Name",
                    "data": "LecturerName",
                },
                {
                    "title": "Lecture Record Month",
                    "data": "RecordMonth"
                },
                {
                    "title": "Total Records Count",
                    "data": "TotalRecordsCount",
                },
                {
                    "title": "Pending Records Count",
                    "data": "PendingRecordsCount",
                },
                {
                    "title": "Approved Records Count",
                    "data": "ApprovedRecordsCount"
                },
                {
                    "title": "Rejected Records Count",
                    "data": "RejectedRecordsCount",
                }
            ],
            "language": {
                "emptyTable": "No Records Found!"
            }
        });

        function NavigateConductedLecturesApprovalForm(lecturerId, recordMonth) {
            window.location.href = "@Url.Action("ManageLecturerMonthlyApprovals", "SA")/" + lecturerId + "/" + recordMonth;
        }

        function OpenColorCodingDescription() {
            $("#colorCodingDescriptionModal").modal("show");
        }
    </script>
}