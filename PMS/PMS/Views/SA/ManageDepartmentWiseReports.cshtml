
@{
    ViewBag.Title = "ManageDepartmentWiseReports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2" id="breadCrumbWrapper">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageDepartmentWiseReports", "SA")">Manage Department Wise Reports</a></li>
        </ol>
    </div>
</div>

<div class="card mt-2 mb-0" style="padding-top:7px">
    <form class="container ml-2 mr-2 mt-0 mb-2">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label>Department</label>
                    <select id="department" class="form-control" name="department">
                        <option value="">Choose...</option>
                        <option value="">IT</option>
                        <option value="">Business</option>
                        <option value="">Engineering</option>
                    </select>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label>Month/Year</label>
                    <select id="month_year" onchange="enableMonthYear(this);" class="form-control" name="month_year">
                        <option value="">Choose...</option>
                        <option value="1">Month</option>
                        <option value="2">Year</option>
                    </select>
                </div>
            </div>

            <div class="col d-none" id="month">
                <div class="form-group">
                    <label>Months</label>
                    <select class="form-control ">
                        <option value="">Choose...</option>
                        <option value="January">January</option>
                        <option value="February">February</option>
                        <option value="March">March</option>
                        <option value="April">April</option>
                        <option value="May">May</option>
                        <option value="June">June</option>
                        <option value="July">July</option>
                        <option value="August">August</option>
                        <option value="September">September</option>
                        <option value="October">October</option>
                        <option value="November">November</option>
                        <option value="December">December</option>
                    </select>
                </div>
            </div>

            <div class="col d-none" id="year">
                <div class="form-group">
                    <label>Year</label>
                    <select id="ddlYears" class="form-control ">
                        <option value="">Choose...</option>
                    </select>
                </div>
            </div>

            <div class="col" style="margin-top:32px">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>


        </div>
    </form>

    <div class="table-responsive">
        <table class="table mt-2 mb-0 table table-bordered data-table nowrap " style="padding-top:7px">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Employee</th>
                    <th scope="col">Lecture Date</th>
                    <th scope="col">Lecture Duration</th>
                    <th scope="col">Payment Amount</th>
                    <th scope="col">Payment Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th></th>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>

            </tbody>
        </table>
        </div>

        <script type="text/javascript">
            function enableMonthYear(answer) {
                console.log(answer.value);
                if (answer.value == 1) {
                    document.getElementById('month').classList.remove('d-none');
                    document.getElementById('year').classList.add('d-none');
                } else if (answer.value == 2) {
                    document.getElementById('year').classList.remove('d-none');
                    document.getElementById('month').classList.add('d-none');
                }
            };
        </script>

        <script type="text/javascript">
            window.onload = function () {
                var ddlYears = document.getElementById("ddlYears");
                var currentYear = (new Date()).getFullYear();
                for (var i = 2000; i <= currentYear; i++) {
                    var option = document.createElement("OPTION");
                    option.innerHTML = i;
                    option.value = i;
                    ddlYears.appendChild(option);
                }
            };
        </script>
    </div>


