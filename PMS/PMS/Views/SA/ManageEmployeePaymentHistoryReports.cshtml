@{
    ViewBag.Title = "ManageEmployeePaymentHistoryReports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-2 mb-0">
    <div class="col-12">
        <ol class="breadcrumb ml-2 mr-2 pt-2 pb-0 mb-2" id="breadCrumbWrapper">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "SA")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ManageEmployeePaymentHistoryReports", "SA")">Manage Employee Payment History Reports</a></li>
        </ol>
    </div>
</div>

<div class="card mt-2 mb-0" style="padding-top:7px">
    <form class="container ml-2 mr-2 mt-0 mb-2">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label>User Name</label>
                    <select onchange="search_city();" id="district" class="form-control" name="district">
                        <option value="">Choose...</option>
                    </select>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label>Start Date</label>
                    <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label>End Date</label>
                    <input type="date" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
            </div>

            <div class="col" style="margin-top:32px">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>


        </div>
    </form>

    <div class="table-responsive">
        <table class="table mt-2 mb-0 table table-bordered data-table nowrap" style="padding-top:7px">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Lecture Date</th>
                    <th scope="col">Lecture Duration</th>
                    <th scope="col">Payment Amount</th>
                    <th scope="col">Payment Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th></th>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>

            </tbody>
        </table>
        </div>
    </div>
