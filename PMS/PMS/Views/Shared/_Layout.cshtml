        function getNotifications() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetDashboardUserNotifications", "SA")',
                success: function (response) {
                    var data = response.data;
                    if (data.length != 0) {
                        var activeNotificationsCount = 0;
                        var index = 0;
                        $("#alertContent").html("");
                        var dynamicContent = `<h6 class="dropdown-header">Alerts Center</h6>`;
                        for (var i = 0; i < data.length; i++) {
                            if (data[i].IsActive) {
                                activeNotificationsCount++;
                            }

                            if (index <= 2) {
                                dynamicContent += `<a class="dropdown-item d-flex align-items-center" href="#"><div class="mr-3">`;

                                if (data[i].NotificationType == "Approval") {
                                    dynamicContent += `<div class="icon-circle bg-success"><i class="fas fa-thumbs-up text-white"></i></div></div>`;
                                }
                                else if (data[i].NotificationType == "Rejection") {
                                    dynamicContent += `<div class="icon-circle bg-danger"><i class="fas fa-times-circle text-white"></i></div></div>`;
                                }
                                else {
                                    dynamicContent += `<div class="icon-circle bg-warning"><i class="fas fa-exclamation-triangle text-white"></i></div></div>`;
                                }

                                dynamicContent += `<div><div class="small text-gray-500">` + data[i].NotificationDate + `</div>`;

                                if (data[i].IsActive) {
                                    dynamicContent += `<button class="btn btn-sm float-right" onclick="onNotificationClick(` + data[i].NotificationId + `)"><i class="fas fa-trash text-gray-500"></i></button>`
                                        + `<span class="font-weight-bold">` + data[i].Message + `</span></div></a>`;
                                }
                                else {
                                    dynamicContent += `<span>` + data[i].Message + `</span></div></a>`;
                                }
                            }
                            index++;
                        }

                        dynamicContent += `<a class="dropdown-item text-center small text-gray-500" href="javascript:viewAllAlerts()">Show All Alerts</a>`

                        if (activeNotificationsCount > 3) {
                            $("#alertCount").html("3+");
                        }
                        else {
                            if (activeNotificationsCount != 0) {
                                $("#alertCount").html(activeNotificationsCount);
                            }
                            else {
                                $("#alertCount").html("");
                            }
                        }

                        $("#alertContent").html(dynamicContent);
                    }
                }
            });
        }

        function onNotificationClick(notificationId) {
            $.ajax({
                type: "GET",
                url: '@Url.Action("InactivateDashboardUserNotifications", "SA")/' + notificationId,
                success: function (data) {
                    getNotifications();
                }
            });
        }

        function viewAllAlerts() {
            notificationTbl = $("#notificationTbl").DataTable({
                "responsive": true,
                "scrollY": "30vh",
                "scrollX": true,
                "scroller": true,
                "order": [],
                "ajax": {
                    "url": "@Url.Action("GetDashboardUserNotifications", "SA")",
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    {
                        "title": "",
                        "data": null,
                        "render": function (data) {
                            if (data.IsActive) {
                                return `<button class="btn btn-sm" onclick="onNotificationClick(` + data.NotificationId + `)"><i class="fas fa-trash text-gray-500"></i></button>`;
                            }
                            else {
                                return "";
                            }
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "20px"
                    },
                    {
                        "title": "",
                        "data": "NotificationType",
                        "render": function (data) {
                            if (data == "Approval") {
                                return `<div class="icon-circle bg-success"><i class="fas fa-thumbs-up text-white"></i></div></div>`;
                            }
                            else if (data == "Rejection") {
                                return `<div class="icon-circle bg-danger"><i class="fas fa-times-circle text-white"></i></div></div>`;
                            }
                            else {
                                return `<div class="icon-circle bg-warning"><i class="fas fa-exclamation-triangle text-white"></i></div></div>`;
                            }
                        },
                        "orderable": false,
                        "searchable": false
                    },
